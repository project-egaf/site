---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE, GITHUB_URL, DISCORD_INVITE_URL } from '../consts';
import HeaderDropdown from './HeaderDropdown.astro';
const worksDropdownSchema = [
	{ text: 'Fandoms with 1 work', link: '/1' },
	{ text: 'Fandoms with less than 5', link: '/<5' },
	{ text: 'Fandoms with less than 10', link: '/<10' }
]
---

<header style="view-transition-name: header">
	<nav>
		<div class="links">
			<h2><a href="/">{SITE_TITLE}</a></h2>
			<!--HeaderDropdown schema={worksDropdownSchema}>
				Works
			</HeaderDropdown-->
			<HeaderLink href="/1">Fandoms</HeaderLink>
			<HeaderLink href="/faq">FAQ</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/progress">Progress</HeaderLink>
		</div>
		<div class="social-links">
			<a href={DISCORD_INVITE_URL} target="_blank">
				<span class="sr-only">Join the Project EGAF Discord</span>
				<svg aria-hidden="true" viewBox="0 0 24 24" width="32" height="32"><path fill="currentcolor" d="M20.32 4.37a19.8 19.8 0 0 0-4.93-1.51 13.78 13.78 0 0 0-.64 1.28 18.27 18.27 0 0 0-5.5 0 12.64 12.64 0 0 0-.64-1.28h-.05A19.74 19.74 0 0 0 3.64 4.4 20.26 20.26 0 0 0 .11 18.09l.02.02a19.9 19.9 0 0 0 6.04 3.03l.04-.02a14.24 14.24 0 0 0 1.23-2.03.08.08 0 0 0-.05-.07 13.1 13.1 0 0 1-1.9-.92.08.08 0 0 1 .02-.1 10.2 10.2 0 0 0 .41-.31h.04a14.2 14.2 0 0 0 12.1 0l.04.01a9.63 9.63 0 0 0 .4.32.08.08 0 0 1-.03.1 12.29 12.29 0 0 1-1.9.91.08.08 0 0 0-.02.1 15.97 15.97 0 0 0 1.27 2.01h.04a19.84 19.84 0 0 0 6.03-3.05v-.03a20.12 20.12 0 0 0-3.57-13.69ZM8.02 15.33c-1.18 0-2.16-1.08-2.16-2.42 0-1.33.96-2.42 2.16-2.42 1.21 0 2.18 1.1 2.16 2.42 0 1.34-.96 2.42-2.16 2.42Zm7.97 0c-1.18 0-2.15-1.08-2.15-2.42 0-1.33.95-2.42 2.15-2.42 1.22 0 2.18 1.1 2.16 2.42 0 1.34-.94 2.42-2.16 2.42Z"></path></svg>
			</a>
			<a href={GITHUB_URL} target="_blank">
				<span class="sr-only">Go to Project EGAF's GitHub Repo</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		position: relative;
		z-index: 1;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.links {
		display: flex;
		align-items: inherit;
	}

	.links a {
		transition: text-decoration-color 0.25s ease;
		text-decoration: 1px solid transparent;
		display: inline-block;
		&:hover {
			color: var(--accent);
			text-decoration-color: var(--accent);
		}
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
